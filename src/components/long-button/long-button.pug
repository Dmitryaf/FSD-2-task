  options.text
  options.size - lg || avg
  options.isInverted - bool
  options.isSubmit - bool
  options.isDisabled - bool

mixin long-button(options = {})
  -
    const {text = 'Button', isInverted = false, isSubmit = false, isDisabled = false} = options
    let classes = ''

    classes += isInverted ? ' button_inverted' : ''
    classes += isDisabled ? ' button_disabled' : ''


  button.long-button(class=classes, type = isSubmit ? 'submit' : false)= text
    i.long-button__icon arrow_forward