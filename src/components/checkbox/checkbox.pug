  options.label
  options.isChecked - true || false
  options.isBold - true || false

mixin checkbox(options)
  if !options
    - options = {}

  - 
    let {label, isChecked = false, isBold = false} = options
    let classes = ''
    
    classes += isBold ? 'checkbox_bold' : ''

  label.checkbox(class= classes)= label
    input.checkbox__input(type='checkbox' checked=isChecked)
    span.checkbox__mark

