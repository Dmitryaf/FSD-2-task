  options.isChecked - true || false
  options.isBold - true || false

mixin checkbox(options = {})
  - 
    const {label = '', name = '', isChecked = false, isBold = false} = options
    let classes = ''

    classes += isBold ? 'checkbox_bold' : ''

  label.checkbox(class= classes)= label
    input.checkbox__input(type='checkbox' name=name checked=isChecked)
    span.checkbox__mark

