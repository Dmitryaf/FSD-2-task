include ../logo/logo
include ../subscription/subscription
include ../copyright/copyright

//-
  options.items
  options.items[0].name
  options.items[0].href

mixin footer(options = {})

  - const {menuItems = [], subscription = {}} = options

    footer.footer(options)
      +container()
        .footer__content
          .footer__left
            a.footer__logo(href = '/')
              +logo()
            p.footer__text= 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»'
          .footer__right
            for item in menuItems
              .footer__column
                h5.footer__title= item.title
                .footer__list
                  for listItem in item.list
                    a.footer__list-item(href= listItem.href)= listItem.name
          .footer__subscription
            h5.footer__title= subscription.title
            .footer__list
              p.footer__text= subscription.text
              +subscription()
        .footer__copyright
          +copyright()


