  options.text
  options.size - lg || avg
  options.isInverted - bool
  options.isSubmit - bool
  options.isDisabled - bool

mixin button(options = {})
  -
    const {text = 'Button', size = 'avg', isInverted = false, isSubmit = false, isDisabled = false} = options
    let classes = ''

    classes += isInverted ? ' button_inverted' : ''
    classes += isDisabled ? ' button_disabled' : ''
    classes += size === 'lg' ? ' button_lg' : ''


  button.button(class=classes, type = isSubmit ? 'submit' : false)= text