include ../gallery/gallery
include ../rate-btn/rate-btn
include ../room-info/room-info


mixin room-card(options)
  if !options
    - options = {}

  - 
    let {galleryItems = [], galleryNav = 'show', number = 888, price = '9 900', rate = 0, reviewCount = 0, roomInfoSize = 'sm', isLux = false, } = options;

  .room-card
    .room-card__gallery
      +gallery({galleryItems, isNav: galleryNav})
    .room-card__content
      .room-card__info
        +room-info({roomNumber: number, isLux, price, size: roomInfoSize})
      .room-card__rate
        +rate-btn({rate})
        .room-card__reviews
          span.room-card__reviews-count= reviewCount
          span.room-card__reviews-text= ' Отзывов'