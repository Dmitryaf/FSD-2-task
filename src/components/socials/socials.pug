mixin socials(options)
  if !options
    - options = {}

  if !options.items
    - options.items = []

  .socials
    a.socials__link(href='https://www.facebook.com/')
      img.socials__icon(src=require('/components/socials/img/facebook.svg'))
    a.socials__link(href='https://twitter.com/')
      img.socials__icon(src=require('/components/socials/img/twitter.svg'))
    a.socials__link(href='https://www.instagram.com/')
      img.socials__icon(src=require('/components/socials/img/instagram.svg'))