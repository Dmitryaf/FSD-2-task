extends ../ui-kit/ui-kit

include ../../components/header/header
include ../../components/footer/footer
include ../../components/simple-footer/simple-footer
include ../../components/container/container
include ../../components/socials/socials
include ../../components/kit-logo/kit-logo


block title
  title Headers & Footers

block body
  body.headers-footers

  block header
    .headers-footers__logo
      +kit-logo()
    .headers-footers__item
      +header({menuItems: locals.menuItems, isAuth: false})
    .headers-footers__item
      +header({menuItems: locals.menuItems, isAuth: true})

  block content

  block footer
    .headers-footers__item
      +footer({menuItems: locals.footerMenuItems, subscription: locals.subscription})

    .headers-footers__item
      +simple-footer()
