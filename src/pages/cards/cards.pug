doctype html 
html
  head
    meta(charset = 'utf-8')
    meta(name='viewport', content="initial-scale=1.0, width=device-width")
    title Cards

  body
    block header

    block content
      .cards
        .cards__logo 
          +kit-logo()

        +container()
          .cards__content
            .cards__column
              .cards__item.cards__item_room-search
                +room-search-card()
