include ./base-data
block variables

include ../../components/layout/layout
include ../../components/header/header
include ../../components/footer/footer

doctype html 
html
  head
    meta(charset = 'utf-8')
    meta(name='viewport', content="initial-scale=1.0, width=device-width")
    title
      block title

  body
    +layout()
      +layout__header()
        +layout__container({basis: 1150, align: 'center'})
          block header
            +header({menuItems: locals.menuItems, isAuth: locals.isAuth})

    +layout__main()
      +layout__container({basis: 1150, align: 'center'})
        block main

    +layout__footer()
      +layout__container({basis: 1150, align: 'center'})
        block footer
          +footer()

    block scripts