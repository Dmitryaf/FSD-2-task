include ./base-data

include ../../components/header/header
include ../../components/footer/footer
include ../../components/container/container
include ../../components/socials/socials


doctype html 
html
  head
    meta(charset = 'utf-8')
    meta(name='viewport', content="initial-scale=1.0, width=device-width")

    block title
      title Main

  body.base-layout
    block header
      .base-layout__header
        +header({menuItems: locals.menuItems, isAuth: locals.isAuth})

    block content

    block footer
      .base-layout__footer
        +footer({menuItems: locals.footerMenuItems, subscription: locals.subscription})


    block scripts